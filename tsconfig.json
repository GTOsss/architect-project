{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "baseUrl": "./",
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "paths": {
      "#": ["./src/*"]
    }
  },
  "include": ["src/**/*", "index.d.ts", "architect"],
  "exclude": ["src/**/*.test.ts"],
  "references": [
    {
      "path": "./packages/back-dev-toolkit"
    }
  ]
}